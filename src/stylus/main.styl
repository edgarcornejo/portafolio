      font-weight lighter
      line-height 80px
      text-align center
    &.change a
      color var(--eCeleste)
    :hover
      color var(--eAzul)
    .selector
      border-top solid 5px var(--eAzul)
      color var(--eAzul)
      font-size 1.5rem
      font-weight normal

.selector
  &:after
    border-left 8px solid transparent
    border-right 8px solid transparent
    border-top 8px solid var(--eAzul)
    content ""
    display block
    margin -5px auto
    width 0

/*Titulo de pagina*/
#head-title
