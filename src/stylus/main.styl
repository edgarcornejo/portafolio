@import "reset.styl"
@import "main-menu.styl"
@import "second-head.styl"
@import "footer.styl"

:root
  font-size 16px
  --eCeleste hsl(195, 77%, 57%)
  --eAzul hsl(255, 77%, 57%)
  --eRed hsl(345, 77%, 57%)
  --eDark hsl(236, 77%, 14%)

//Inicio
#inicio
  height auto
  padding 4rem 0 3rem 0
  width 100%
  #logo-c
    display inline-block
    max-width 110px
    height auto
  .llamame
    display inline-block
    padding 1rem
    margin-left 1rem
    font-size 1.8rem
    background var(--eAzul)
    border-radius 4px
    color #FFF
    &:hover
      border-left solid 10px var(--eAzul)
  hgroup
    margin 0 auto
    width 90%
    max-width 1300px
  h1
    font-size 4rem
    padding-top 18rem
  h2
    font-size 3.3rem
    font-weight normal
    padding-bottom 8rem

/*Secciones principales*/
.main-section
  article
    margin 0 auto
    max-width 1300px
    padding 8rem 0 8rem 0
    width 90%
    .wrapper-text
      display flex
      padding-bottom 8rem
    h3
      font-size 2rem
      max-height 2.4rem
      font-weight lighter
      text-transform uppercase
      padding-left 10px
      border-left solid 10px var(--eAzul)
    .text-cantainer
      padding-left 50px
      max-width 800px
      font-size 2rem
      font-weight lighter

//Espacio Promoción
.promo
  background linear-gradient(90deg, var(--eCeleste) 20px, transparent 1%) center, linear-gradient(var(--eCeleste) 20px, transparent 1%) center, #A3D0DF
  background-size 22px 22px
  color #FFF
  article
    padding 8rem 0 2rem 0
  .aviso-promo
    font-size 3rem
    font-weight lighter
  a
    color #FFF

/*Marcas*/
.marcas
  .marcas-container
    display flex
    text-align center
  figure
    width 25%
  figcaption
    text-align center
    margin-top 2.5rem
    a
      padding 15px
      border solid 1px var(--eAzul)
      border-radius 5px
      font-size 1.5rem
      &:hover
        color #FFF
        background var(--eAzul)
  img
    max-height 150px
    width auto/9
    filter grayscale(100%)
    &:hover
      filter grayscale(0%)
      opacity 1
  .desaturar
    opacity 0.3

/*Publicaciones Principales*/
.top-post
  a
    padding 15px
    border solid 1px var(--eAzul)
    border-radius 5px
    font-size 1.5rem
    display inline-block
    margin 5px
    &:last-child
      background var(--eAzul)
      color #FFF
    &:hover
      color #FFF
      background var(--eAzul)

/*Contacto*/
.contacto
  p
    font-size 1.5rem

#social
  margin-bottom 3rem
  a
    background url("../img/icon-social.svg") no-repeat var(--eCeleste)
    background-size cover
    border-radius 4px
    color transparent
    display inline-block
    font-size 0
    height 48px
    margin-right 10px
    text-indent -99999999px
    width 48px
    &:nth-child(1)
      background-position 0 0
    &:nth-child(2)
      background-position -48px 0
    &:nth-child(3)
      background-position -96px 0
    &:nth-child(4)
      background-position -143px 0
    &:nth-child(5)
      background-position -191px 0
    &:nth-child(6)
      background-position -243px 0
    &:nth-child(7)
      background-position -287px 0
    &:nth-child(8)
      background-position -336px 0
    &:hover
      background-color var(--eAzul)
      transform scale3d(1.2, 1.2, 1)

.list
  &.mailing-list
    li
      height auto
      padding-bottom 1rem
      width 90%
      a
        padding 15px
        border solid 1px var(--eAzul)
        border-radius 5px
        font-size 1.2rem
        display inline-block
        &:hover
          color #FFF
          background var(--eAzul)
    strong
      display inline-block
      font-size 1.2rem
      font-weight normal
      width 110px

/*Pagina Presentacion*/
.logo
  height auto
  left 180px
  max-width 5%
  position fixed
  top 40px
  width auto/9
  &.scroll
    top 60px

/*Titulo de pagina*/
#head-title
  margin 0 auto
  max-width 1300px
  padding-top 3rem
  width 90%
  h1
    font-size 5rem
    text-align right
    color var(--eCeleste)

/*Paginas Secundarias*/
#main-content
  width 100%
  .section
    margin 0 auto
    width 100%
  article, .title-proyecto
    margin 0 auto
    max-width 800px
    width 90%
    padding-top 4rem
  h2
    border-left 10px solid var(--eCeleste)
    font-size 3rem
    margin 10px 0 40px 0
    padding-left 10px
  h3
    font-size 2rem
    padding 1rem
  figure
    padding 20px 0 20px 0
    text-align center
  img
    height auto
    max-width 90%
    width auto/9
  figcaption
    padding-top 1rem

.text-full
  margin 2rem 0 2rem 0
  font-size 1.5rem
  .link-out
    margin-bottom 1rem
    display inline-block
  img
    display block
    margin 0 auto
    padding-top 1rem
    padding-bottom 2rem

.s3 a
  padding 15px
  display inline-block
  border solid 1px var(--eAzul)
  border-radius 5px
  font-size 1.5rem
  margin-right 1rem
  margin-bottom 1rem
  &:hover
    color #FFF
    background var(--eAzul)

/*Portafolio*/
.content-service
  display flex
  overflow auto
  margin 0 auto
  max-width 860px
  padding-bottom 1rem
  width 90%
  p
    font-size 1.2rem
    line-height 1.8rem
    max-width 55%

.gallery-cell,.gallery-dev,.gallery-seo,.gallery-pro
  margin-top 3rem
  min-height 250px
  margin-right 1rem
  padding 2rem
  border-radius 5px
  min-width 800px
  border solid 1px var(--eCeleste)

.visitar
  padding 15px
  border solid 1px var(--eAzul)
  border-radius 5px
  font-size 1.5rem
  display inline-block
  margin-top 1rem
  &:hover
