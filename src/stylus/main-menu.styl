//Menu Principal
#topnav
  border-top solid 2px var(--eCeleste)
  height 3rem
  text-align center
  width 100%
  ul
    display flex
    height 3rem
    margin 0 auto
    max-width 1300px

#main_nav
  li
    width 20%
    line-height 5rem
    a
      cursor pointer
      font-size 1.4rem
      letter-spacing 1px
      text-transform uppercase
      &:hover
        font-weight bold

.menu-checkbox
  display none

@media screen and (max-width:640px) 
  #topnav
    border 0
    height auto
    ul
      display none
      height auto
      li
        width 100%
        line-height 4rem
        border-top solid 1px var(--eCeleste)

  .menu-open
    user-select none
    cursor pointer
    height 40px
    width 40px
    background url('../img/icon-hamburger.svg') no-repeat center
    background-size 60%
    display inline-block
    margin-bottom 1rem

  .menu-checkbox:checked ~ #topnav
    .menu-open
      background url('../img/icon-close.svg') no-repeat center !important
      background-size 60% !important
    ul
      display block
