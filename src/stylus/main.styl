  background-size 22px 22px
  color #FFF
  article
    padding 8rem 0 2rem 0
  .aviso-promo
    font-size 3rem
    font-weight lighter
  a
    color #FFF

/*Marcas*/
.marcas
  .marcas-container
    display flex
    text-align center
  figure
    width 25%
  figcaption
    text-align center
    margin-top 2.5rem
    a
      padding 15px
      border solid 1px var(--eAzul)
      border-radius 5px
      font-size 1.5rem
      &:hover
        color #FFF
        background var(--eAzul)
  img
    max-height 150px
    width auto/9
    filter grayscale(100%)
    &:hover
      filter grayscale(0%)
      opacity 1
  .desaturar
    opacity 0.3

/*Publicaciones Principales*/
.top-post
  a
    padding 15px
    border solid 1px var(--eAzul)
    border-radius 5px
    font-size 1.5rem
    display inline-block
    margin 5px
    &:last-child
      background var(--eAzul)
      color #FFF
    &:hover
      color #FFF
      background var(--eAzul)

/*Contacto*/
.contacto
  p
    font-size 1.5rem

#social
  margin-bottom 3rem
  a
    background url("../img/icon-logo.png") var(--eCeleste)
    border-radius 5px
    color transparent
    display inline-block
    font-size 0
    height 48px
    margin-right 10px
    text-indent -99999999px
    width 48px
    &:nth-child(1)
      background-position -10px 0
    &:nth-child(2)
      background-position -73px 0
    &:nth-child(3)
      background-position -138px 0
    &:nth-child(4)
      background-position -200px 0
    &:nth-child(5)
      background-position -265px 0
    &:nth-child(6)
      background-position -333px 0
    &:nth-child(7)
      background-position -390px 0
    &:nth-child(8)
      background-position -455px 0
    &:nth-child(9)
      background-position -519px 0
    &:hover
      background-color var(--eAzul)
      transform rotate(360deg)

.list
