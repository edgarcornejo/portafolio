/*Responsive Design*/
@media screen and (max-width:1366px)
  #inicio
    .llamame
      font-size 1.2rem
    hgroup
      max-width 1024px
    h1
      font-size 3rem
      padding-top 8rem
    h2
      font-size 2.5rem
      padding-bottom 4rem
  
  #topnav, #topnav2
    ul
      max-width 1024px

  #main_nav li a
    font-size 1rem
  
  .main-section
    article
      max-width 1024px
      .text-cantainer
        font-size 1.5rem
  
  .logo
    max-width 7%
    left 180px
    top 90px

  #head-title
    h1
      font-size 3rem
    
  #main-content
    article, .title-proyecto
      max-width 600px
    h2
      font-size 2.5rem
    h3
      font-size 1.5rem
  
  #head-title
    max-width 1024px
  
  .content-service
    max-width 600px

  .gallery-cell,.gallery-dev,.gallery-seo,.gallery-pro
    min-width 550px
    &:nth-of-type(n)
      background-size 25%

@media screen and (max-width:1024px)
  #main-content
    article, .title-proyecto
      max-width 500px
    
  #inicio
    text-align center
  
  #navigation-per-page
    left 10px

  .content-service
    max-width 500px
    p
      max-width 90%
      font-size 1rem
    
  .gallery-cell,.gallery-dev,.gallery-seo,.gallery-pro
    min-width 450px
    padding 7rem 2rem 2rem 2rem
    &:nth-of-type(n)
      background-position top center
    
  #cont-logo
    width 100%
    text-align center
    display block
    padding 3rem 0 3rem 0
    .logo
      position static
      max-width auto

@media screen and (max-width:768px)
  #inicio
    padding 4rem 0 0 0
    h1
      font-size 2.8rem

  .logo
    position static
    display block
    margin 1.5em auto
    max-width 10%

  .marcas
    .marcas-container
      justify-content space-between
    figure
      width 20%
    a
      display inline-block
    img
      max-width 90px
    
  #topnav,#topnav2
    width 100%
    max-width auto
    height auto
    ul
      height auto
    li:hover:after
      display none
    
  #head-title h1,.title-proyecto
    text-align center
    
  #navigation-per-page
    display none
    
  .text-full
    font-size 1rem

@media screen and (max-width:620px)
  #inicio 
    .llamame
      display block
      margin-left 0
      margin-top 1rem
    h1
      font-size 2rem
      padding-top 2rem
    h2
      padding-top 1rem
      font-size 1.8rem
  
  .logo
    max-width 30%
      
  .marcas
    .marcas-container
      flex-wrap wrap
    figure
      width 50%
      padding-bottom 1rem
    figcaption
      margin-top 1rem
    img
      filter grayscale(0)
    .desaturar
      opacity 1

