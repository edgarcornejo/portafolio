/*Principal*/
#contenedor
  height auto

#cabecera
  width 100%
  background linear-gradient(-45deg, rgba(205,38,252,1) 0%, rgba(140,62,244,1) 53%, rgba(145,132,250,1) 100%), url("../img/top-back.jpg")
  background-size cover
  background-position 0 center
  background-repeat no-repeat
  background-blend-mode multiply
  color var(--devWhite)
  font-family 'Titillium Web', Helvetica, sans-serif
  #wrap-hgroup
    display flex
    justify-content flex-end
  hgroup
    padding-top 15%
    padding-bottom 5%
    width 82%
    text-align left
    h1
      font-size 5rem
      line-height 95%
    h2
      font-size 3rem
      letter-spacing 1px
      font-family 'Roboto', Helvetica, sans-serif

.round
  border-top 2rem solid var(--devGrape)
  border-left 2rem solid transparent

#cuerpo
  margin 0 auto
  width 100%
  padding 0 0 6% 0
  article:nth-child(even)
    justify-content flex-end
    text-align left
  article:nth-child(odd)
    text-align right
  article
    margin-top 10%
    display flex
    align-items center
    align-content center
    .wrap-article
      width 60%
      padding 5%
      h2
        font-family 'Titillium Web', Helvetica, sans-serif
        font-size 4rem
        line-height 3.8rem
        padding-bottom 1rem
        color var(--devGrape)
        max-width 500px
        display inline-block
      h3
        font-size 2rem
        font-weight bolder
        padding-bottom 2rem
        text-transform uppercase
        color var(--devOrange)
      hr 
        background var(--devGrape)
      p
        font-size 1.5rem
        font-weight 200
        line-height 2rem
        max-width 500px
        display inline-block
      .bot-call
        background var(--devGrape)
        display inline-block
        font-size 1.2rem
        color var(--devWhite)
        border 0

/*background article*/
#cuerpo
  article
    &:nth-child(1)
      background url("../img/iam.jpg") no-repeat
      background-size 40% auto
      background-position 100% 0
    &:nth-child(2)
      background url("../img/services.jpg") no-repeat
      background-size 40% auto
      background-position 0 50%
    &:nth-child(3)
      background url("../img/contact.jpg") no-repeat
      background-size 40% auto
      background-position 100% 50%
  
footer
  position relative
  padding 4rem 0 4rem 0
  background var(--devGrape)

#pie
  margin 0 auto
  width 90%
  max-width 1200px
  padding 1rem 0 3rem 0
  display flex
  justify-content space-around
  .contacto
    width 30%
    a
      border solid 1px var(--devWhite)
      font-size 1.2rem
      line-height 3rem
      color var(--devWhite)
    p
      font-family 'Titillium Web', Helvetica, sans-serif
      font-weight bolder
      margin-bottom 2rem
      font-size 1.5rem
      text-transform uppercase
      color var(--devOrange)
      letter-spacing 2px
      text-align right
      &:after
        display block
        content ""
        position relative
        width 90%
        border-bottom dotted 2px var(--devOrange)
        padding-bottom .5rem
  ul
    width 30%
    li
      list-style none
      text-align right
      &:first-child
        font-family 'Titillium Web', Helvetica, sans-serif
        font-weight bolder
        margin-bottom 2rem
        font-size 1.5rem
        text-transform uppercase
        color var(--devOrange)
        letter-spacing 2px
        &:after
          display block
          content ""
          position relative
          width 90%
          border-bottom dotted 2px var(--devOrange)
          padding-bottom .5rem
      a
        font-size 1.2rem
        line-height 3rem
        color var(--devWhite)

#copyright
  font-size 0.9rem
  display block
  width 90%
  max-width 1200px
  margin 0 auto
  text-align right
  color var(--devWhite)

.adorno
  position absolute
  width 100%
  top 0
  right 0
  div
    position absolute
    width 100px
    height 100px
    background var(--devOrange)
    top -50px
    right 100px
    display flex
    align-items center
    justify-content center
    border-radius 50%
    img
      max-width 60%

/*Responsive*/
@media screen and (max-width:1440px)
  #cabecera
    hgroup
      width 90%
      h1
        font-size 4.5rem
      h2
        font-size 2.5rem

@media screen and (max-width:1440px)
  #cabecera
    hgroup
      padding-top 4%
      padding-bottom 3%
      h1
        font-size 3rem
      h2
        font-size 2rem
  
  #cuerpo
    padding 0 0 5% 0
    article
      margin-top 5%
      .wrap-article
        width 60%
        padding 5%
        h2
          font-size 3rem
          line-height 2.8rem
          padding-bottom 0
        h3
          font-size 1.5rem
          padding-bottom 1.5rem
        p
          font-size 1.2rem
          font-weight 200
          line-height 1.3rem

@media screen and (max-width:1024px)
  #cabecera
    hgroup
      h1
        font-size 2.5rem
      h2
        font-size 1.5rem
  
  #cuerpo
    padding 0 0 5% 0
    article
      margin-top 5%
      .wrap-article
        width 60%
        padding 2.5%
        h2
          font-size 2rem
          line-height 2rem
          padding-bottom 0
        h3
          font-size 1.2rem
          font-weight normal
          padding-bottom 1.5rem
        p
          font-size 1rem
          font-weight 200
          line-height 1.3rem
  
  #pie
    .contacto
      a
        font-size 1rem
        line-height 3rem
      p
        margin-bottom 2rem
        font-size 1rem
    ul
      li
        &:first-child

          font-size 1rem
        a
          font-size 1rem

@media screen and (max-width:680px)
  #cabecera
    background linear-gradient(-45deg, rgba(205,38,252,1) 0%, rgba(140,62,244,1) 53%, rgba(145,132,250,1) 100%)
    #wrap-hgroup
      justify-content center
    hgroup
      padding-top 0
      text-align center
      h1
        font-size 2rem
      h2
        font-size 1.2rem
    #wrap-logo-nav
      padding-top 2rem
      display flex
      justify-content center
      align-items center
      flex-wrap wrap
      .menu-open
        display block
        margin 2rem auto
    #logo
      width 100%
      order 1
      padding-bottom 1.5rem
      img
        width 100px
    nav
      width 100%
      display flex
      flex-wrap wrap
      order 3
      ul
        display none
        padding-bottom 2rem
      li
        font-size 1.5rem
        line-height 2.5rem
        width 100%
    #contact
      order 1
      width auto
      text-align center
    
    .menu-checkbox
      display none
      &:checked ~ #wrap-logo-nav
        .menu-open
          background url('../img/icon-close.svg') no-repeat center !important
          background-size 60% !important
        ul
          display flex
          flex-wrap wrap
          width 100%
        #logo
          justify-content center
  
  #cuerpo
    padding 0 0 10% 0
    article:nth-child(even)
      justify-content flex-start
      text-align left
    article:nth-child(odd)
      text-align left
    article
      background none !important 
      margin-top 3%
      .wrap-article
        width 90%
        margin 0 auto
        padding 5%
        h2
          max-width auto
        p
          max-width auto
        .bot-call
          margin-bottom 1rem

  footer
    padding 2rem 0 2rem 0

  #pie
    display flex
    flex-wrap wrap
    justify-content space-around
    .contacto
      width 100%
      text-align center
      padding-bottom 2rem
      p
        text-align center
    ul
      width 100%
      padding-bottom 2rem
      li
        text-align center

  #copyright
    text-align center

  .adorno
    position absolute
    width 100%
    top 0
    right 0
    div
      position absolute
      width 80px
      height 80px
      background var(--devOrange)
      top -50px
      right 45%
      display flex
      align-items center
      justify-content center
      border-radius 50%
      img
        max-width 60%

@media screen and (max-width:480px)
  .adorno
    display none