/*Paleta Color*/
:root
  --hardWhite: #FFFFFF
  --greenLiquid: #A0EAEB
  --greenPastel: #6AC8C7
  --greenMate: #0FAAA7
  --greenPure: #0D8796
  --hardGreen: #262626

a
  color #FFF
  text-decoration none
  &:hover
    color #014A98

/*Transiciones*/
.anin-rapido
  -webkit-transition all 0.2s ease-out
  -moz-transition all 0.2s ease-out
  -o-transition all 0.2s ease-out
  -ms-transition all 0.2s ease-out
  transition all 0.2s ease-out

.anin-normal
  -webkit-transition all 0.5s ease-out
  -moz-transition all 0.5s ease-out
  -o-transition all 0.5s ease-out
  -ms-transition all 0.5s ease-out
  transition all 0.5s ease-out

.anin-lento
  -webkit-transition all 1s ease-out
  -moz-transition all 1s ease-out
  -o-transition all 1s ease-out
  -ms-transition all 1s ease-out
  transition all 1s ease-out

/*Principal*/
body
  width 100%
  height 100%
  color #FFF
  font-size 16px
  font-family 'Open Sans',Helvetica,Arial,sans-serif
  background-color var(hardWhite)

#main-content
  width 100%
  height auto
  margin 0 auto

/*Logotipo*/
#logo
  background url(../img/logo.png) no-repeat center var(--greenMate)
  min-height 80px
  max-height 80px
  width 100%
  max-width 200px
  &:after
    display block
    content ''
    position relative
    left 100%
    width 0
    height 0
    border-top 80px solid var(--greenMate)
    border-right 30px solid transparent

.logo
  transition all 0.2s ease-out
  color var(--greenPure)
  &.scroll
    color transparent !important

/*Titulo*/
#main-header
  width 100%
  display flex
  align-items center
  flex-wrap wrap
  position fixed
  z-index 100
  border-top 5px solid var(--greenMate)
  h1
    font-size 1.5em
    font-weight 400
    letter-spacing -0.5px
    word-spacing 2px
    text-transform uppercase
  a
    color var(--greenPure)
    
#main-title
  padding-left 3em

/*Contenido*/
#content
  width 100%
  height 100%
  padding 22% 0 22% 0
  margin 0 auto
  text-align center

/*Reglas para contenido igual*/
.title-article
  font-size 3em
  padding 1em 0 0em 0
  text-align center

.txt
  margin 1em auto
  max-width 800px
  width 90%
  font-size 1.6em
  text-align justify

#content-intro
  width 100%
  height auto
  margin 0 auto
  color var(--hardGreen)
  padding 8em 0 8em 0
  div
    background url(../img/sprite.png) no-repeat center -55px
    background-size 600px
    height 250px

#content-presentation
  width 100%
  height auto
  margin 0 auto
  background var(--greenPure)
  padding 8em 0 8em 0
  background-size cover
  color #FFFFFF
  div
    background url(../img/sprite.png) no-repeat center -380px
    background-size 600px
    height 250px

#content-services
  width 100%
  height auto
  margin 0 auto
  color var(--hardGreen)
  text-align center
  padding 8em 0 8em 0
  .img-services
    background url(../img/sprite.png) no-repeat center -700px
    background-size 600px
    height 250px

#list-services
  margin 2em auto
  width 90%
  max-width 1024px
  height auto
  display flex
  align-items center
  flex-wrap wrap
  justify-content space-around

.iten-services
  padding 2em 0 2em 0
  width 100%
  max-width 180px
  margin-bottom 2em
  color #000000
  h3
    font-weight 400
    font-size 16px
    padding-top 1em
  img
    width auto/9
    height auto
    min-width 20%

.app
  margin 0 auto
  width 100px
  height 100px
  background-image url(../img/servicios.svg)
  background-repeat no-repeat

.relogo
  background-position center -124.42px

.brochure
  background-position center -249px

.afiches
  background-position center -373px

.flayers
  background-position center -497px

.vectorizaciones
  background-position center -622px

.gigantografias
  background-position center -747px

.mascotas
  background-position center -871px

.merchandise
  background-position center -995px

.tarjetas
  background-position center -1119px

#content-habilidades
  width 100%
  height auto
  margin 0 auto
  background var(--greenPure)
  color #FFFFFF
  padding 8em 0 8em 0
  div
    background url(../img/sprite.png) no-repeat center -1020px
    background-size 600px
    height 250px

#contacto
  width 100%
  height auto
  margin 0 auto
  color var(--hardGreen)
  padding 8em 0 8em 0
  text-align center
  div
    background url(../img/sprite.png) no-repeat center -1345px
    background-size 600px
    height 250px
  a
    color var(--greenMate)

/*Recomendaci√≥n*/
#main-contain
  width 100%
  height 100%
  background var(--hardWhite)

#sub-contain
  width 90%
  max-width 1300px
  margin 0 auto
  padding 200px 0 200px 0
  display grid
  grid-row-gap 100px
  article
    background var(--greenPastel)
    border-radius 3px
    display grid
    grid-template-columns 30% 70%
    .a
      text-align center
      grid-row-start 1
      grid-row-end 3
      padding 100px 0 100px 0
      background-size 40%
    .b
      text-align left
      grid-row-start 1
      grid-row-end 2
      align-self center
      font-size 1.8em
      padding 50px 0 20px 0
    .c
      text-align left
      grid-row-start 2
      grid-row-end 3
      align-self center
      font-size 1.3em
      padding 10px 0 50px 0
      width 90%
      text-align justify
.aa
  background url("../img/brave-logotype-dark.svg") no-repeat center

.bb
  background url("../img/mamp.png") no-repeat center

.cc
  background url("../img/prepros.png") no-repeat center

