/*Principal*/
#contenedor
  height 100%

#cabecera
  height 100vh
  width 100%
  background rgb(205,38,252);
  background linear-gradient(-45deg, rgba(205,38,252,1) 0%, rgba(140,62,244,1) 53%, rgba(145,132,250,1) 100%)
  color var(--White)
  font-family 'Poiret One', Helvetica, sans-serif
  #wrap-hgroup
    display flex
    justify-content flex-end
  hgroup
    padding-top 25%
    width 82%
    text-align left
    h1
      font-size 5rem
      letter-spacing 2px
    h2
      text-transform uppercase
      font-size 2rem
      font-weight lighter
      font-family 'Roboto', Helvetica, sans-serif

#cuerpo
  margin 0 auto
  width 90%
  max-width 1200px
  padding 2rem 0 2rem 0
  article
    padding-bottom 2rem
    display flex
    header
      width 30%
      //box-shadow 0.2rem 0.2rem 1rem #C0C0C0
      h2
        font-size 2rem
        border-left solid 0.5rem var(--devGrape)
        border-radius 5px
        padding 2rem 0 2rem 1rem
    p
      width 70%
      display block
      margin 0 auto
      padding 2rem 0 2rem 1rem
      font-size 2.5rem
      font-family 'Poiret One', Helvetica, sans-serif
