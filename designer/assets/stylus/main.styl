@media screen and (max-width:1024px)*/

@media screen and (max-width:768px)
  #content
    padding 5em 0 5em 0

  /*Logotipo*/
  #logo,
  #logo-footer
    height 100px
    max-height none
    max-width none
    &:after
      display none

  /*Titulo*/
  #main-header,
  #main-footer
    display block
    position static

  #main-header h1
    font-size 28px
    text-align center

  #main-title
    padding 2em 0 2em 0

  /*Botonera Social*/
  #social-footer
    position static
    display flex
    align-items center
    flex-wrap wrap
    justify-content space-around
    &:before
      display none
    a
      margin-right 0

  /*Nav Footer*/
  #nav-footer ul
    display block
    padding-left 0
    li
      font-size 21px
      padding 1em 0 1em 0
      text-indent 0
      border none

@media screen and (max-width:480px)
  #social-footer
    display block
    width 100%

  #social-footer a
    display inline-block
    margin-left 20px
    margin-top 20px

  #list-services
    display block

  .iten-services
    margin 1em auto
  
  .app
    background-image url(../img/servicio.png)

  #content img
    width auto/9
    height auto
    max-width 50%

  .title-article
    font-size 21px
    padding 1em 0 1em 0

  .txt
    width 85%
    font-size 16px

  #content-intro div
    display none

  #content-presentation div
    display none

  #content-services div
    display none

  #content-habilidades div
    display none

  #contacto div
    display none

